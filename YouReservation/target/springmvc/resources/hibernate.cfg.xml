<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>

    <session-factory>
        <property name="connection.url">jdbc:postgresql://localhost:5432/testReservation</property> <!-- BD Mane -->
        <property name="connection.driver_class">org.postgresql.Driver</property> <!-- DB Driver -->
        <property name="connection.username">postgres</property> <!-- DB User -->
        <property name="connection.password">1747</property> <!-- DB Password -->

        <property name="dialect">org.hibernate.dialect.PostgreSQL82Dialect</property> <!-- DB Dialect -->
        <property name="hbm2ddl.auto">update</property> <!-- create / create-drop / update -->
        <property name="hibernate.current_session_context_class">thread</property>


        <property name="show_sql">true</property> <!-- Show SQL in console -->
        <property name="format_sql">true</property> <!-- Show SQL formatted -->

        <!-- mapping class using annotation -->
        <mapping class="com.webapp.youcode.model.Admin"/>
        <mapping class="com.webapp.youcode.model.NbrPlace"/>
        <mapping class="com.webapp.youcode.model.Reservation"/>
        <mapping class="com.webapp.youcode.model.Users"/>
        <mapping class="com.webapp.youcode.model.Roles"/>
        <mapping class="com.webapp.youcode.model.Apprenant"/>



    </session-factory>
</hibernate-configuration>
